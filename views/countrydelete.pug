extends layout 
 
block content 
  h1= title 
 
  if (toShow == null) 
    h2 No instance to delete 
  else 
    - let countryid = toShow._id 
    - let ccountry_name = toShow.country_name 
    - let ccountry_continent = toShow.country_continent
    - let ccountry_populationranking = toShow.country_populationranking
    - let actionid = "/resource/country/" + countryid 
    script let actionid = "#{actionid}" 
    div 
      div.row 
        div(class='countryAttr mr-3') Country ID is: 
        div #{countryid} 
      div.row 
        div(class='countryAttr mr-3') Country Name is: 
        div #{ccountry_name} 
      div.row 
        div(class='countryAttr mr-3') Country Continent is: 
        div #{ccountry_continent} 
      div.row 
        div(class='countryAttr mr-3') Population ranking is: 
        div #{ccountry_populationranking} 
 
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete 
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel 
 
  script. 
    function cancel() { 
      // Go back to the home page for the costume collection 
      window.location.href='/country' 
    } 
  script. 
    function deleteOnid() { 
      console.log("starting delete") 
      // delete first 
      fetch(actionid, { 
        method: 'DELETE'      // Dont need a body for the delete 
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Delete succeded") 
        window.location.href='/country' 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Delete failed " + error ) 
      }); 
    } 